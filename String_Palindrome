string = input("Please enter your string:")
print()
print(string.casefold())
print("-" * 10)
q = string[::-1].casefold()
print(q)
print("-" * 10)
if string.casefold() == q: # string is case sensitive make sure they are either in upper case or lower case,here I have choosen lower case
    print("The given string {} is Palindrome".format(string))
else:
    print("The given string {} is not a palindrome".format(string))
